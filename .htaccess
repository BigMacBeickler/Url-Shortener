# Aktiviert RewriteEngine für "pretty" short slugs, muss in Apache aktiviert sein. Siehe apache config. httpd.conf im conf ordner
RewriteEngine On
RewriteBase /

# Wenn Datei oder Verzeichnis existiert, nichts tun
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Route /slug zum redirect.php, um gespeicherte Adresse aufzulösen
RewriteRule ^([A-Za-z0-9_-]+)$ redirect.php?slug=$1 [L,QSA]

# Sonst index
RewriteRule ^$ index.php [L]
